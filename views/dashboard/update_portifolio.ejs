<% include ../partials/header %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/dashboard?tipo=portifolio">Edite e atualize seu <b>portifólio</b></a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/dashboard?tipo=portifolio"><span class=""></span>Voltar para dashboard</a></li>
      <li><a href="/sair"><span class=""></span>Sair</a></li>
    </ul>
  </div>
</nav>

<div class="container">
  <% if(validacao) { %>
    <div class="alert alert-danger col-md-12">
      <strong>Atenção! Verifique as informações passadas no formulário</strong>
    </div>
  <% } %>
  <div class="col-md-12">
    <form name="update" action="/update_port" method="post">
      <div class="form-group">
        <!-- <label for="id">id:</label> -->
        <input type="hidden" name="_id" value="<%=dados_secao.id_secao%>" class="form-control">
      </div>
      <div class="form-group">
        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo" value="<%=dados_secao.titulo%>" class="form-control">
      </div>
      <div class="form-group">
        <label for="descricao">Descrição:</label>
        <textarea name="descricao" class="form-control" rows="8"><%=dados_secao.descricao%></textarea>
      </div>
      <button type="submit" class="btn btn-warning">Atualizar</button>
    </form>
  </div>
</div> <!-- end container -->

<% include ../partials/footer %>
