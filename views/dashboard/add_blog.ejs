<% include ../partials/header %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/dashboard?tipo=blog">Adicione conteudo em seu <b>blog</b></a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/dashboard?tipo=blog"><span class=""></span>Voltar para dashboard</a></li>
      <li><a href="/sair"><span class=""></span>Sair</a></li>
    </ul>
  </div>
</nav>

<div class="container">
  <% if(validacao) { %>
    <div class="alert alert-danger col-md-12">
      <strong>Atenção! Verifique as informações passadas no formulário</strong>
    </div>
  <% } %>
  <div class="col-md-12">
    <form name="cadastro" action="/create_blog" method="post">
      <div class="form-group">
        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo" class="form-control">
      </div>
      <div class="form-group">
        <label for="descricao">Conteúdo:</label>
        <textarea name="descricao" class="form-control" rows="8"></textarea>
      </div>
      <button type="submit" class="btn btn-success">Criar</button>
    </form>
  </div>
</div> <!-- end container -->

<% include ../partials/footer %>
